---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body class="flex flex-col h-screen bg-black">
		<Header />
		<div class="flex flex-col justify-center items-center grow h-full">
			<h1
				class="text-2xl sm:text-6xl xl:text-9xl text-red-600 font-black"
			>
				Daedalus' Cookbook
			</h1>
			<h4 class="text-red-600">
				splashing my brain in this place parked in the world wide web
			</h4>
		</div>
		<Footer />
	</body>
</html>
